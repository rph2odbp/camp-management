rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow read access to everyone
    allow read;

    // Allow write access to authenticated users
    allow write: if request.auth != null;

    // Rule for camper photos
    match /camper-photos/{camperId}/{fileName} {
      allow write: if request.auth != null && request.resource.size < 5 * 1024 * 1024;
    }

    // More specific rules for medical files
    // Allow staff and admins to read, write, and delete medical files
    match /campers/{camperId}/medical-files/{fileName} {
       allow read: if request.auth != null && (
         getUserData(request.auth.uid).role in ['staff', 'admin']
       );
       // Add delete rule: Allow parent to delete their own camper's files, and staff/admin to delete any
       allow delete: if request.auth != null && (
         request.auth.uid == parentId ||
         getUserData(request.auth.uid).role in ['staff', 'admin']
       );
    }

    // Helper function to get user data from Firestore
    function getUserData(userId) {
      return get(/databases/(default)/documents/users/$(userId)).data;
    }
  }
}
